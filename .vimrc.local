function! FormatXml ()
    " Locate block of code to be considered (same indentation, no blanks)
    let indent_pat = '^' . matchstr(getline('.'), '^\s*') . '\S'
    let firstline  = search('^\%('. indent_pat . '\)\@!','bnW') + 1
    let lastline   = search('^\%('. indent_pat . '\)\@!', 'nW') - 1
    if lastline < 0
        let lastline = line('$')
    endif
    "<aaa><cr><bbb>
    exec firstline . "," . lastline . 's/<[-_:A-z0-9]\+>\(\s*<[-_:A-z0-9]\+>\)\@=/&\r/ge'

    " Locate block of code to be considered (same indentation, no blanks)
    let firstline  = search('^\%(.\)\@!','bnW') + 1
    let lastline   = search('^\%(.\)\@!', 'nW') - 1
    if lastline < 0
        let lastline = line('$')
    endif
    "</aaa><cr>
    exec firstline . "," . lastline . 's,</[-_:A-z0-9]\+>\s*\($\)\@!,&\r,ge'

    " Locate block of code to be considered (same indentation, no blanks)
    let firstline  = search('^\%(.\)\@!','bnW') + 1
    let lastline   = search('^\%(.\)\@!', 'nW') - 1
    if lastline < 0
        let lastline = line('$')
    endif
    "><cr><aaa/>
    exec firstline . "," . lastline . 's,\(>\)\@<=\s*<[-_:A-z0-9]\+/>,\r&,ge'

    " Locate block of code to be considered (same indentation, no blanks)
    let firstline  = search('^\%(.\)\@!','bnW') + 1
    let lastline   = search('^\%(.\)\@!', 'nW') - 1
    if lastline < 0
        let lastline = line('$')
    endif
    "<aaa/><cr><
    exec firstline . "," . lastline . 's,<[-_:A-z0-9]\+/>\s*\(<\)\@=,&\r,ge'
endfunction

function! FormatJson ()
    " Locate block of code to be considered (same indentation, no blanks)
    let indent_pat = '^' . matchstr(getline('.'), '^\s*') . '\S'
    let firstline  = search('^\%('. indent_pat . '\)\@!','bnW') + 1
    let lastline   = search('^\%('. indent_pat . '\)\@!', 'nW') - 1
    if lastline < 0
        let lastline = line('$')
    endif
    exec firstline . "," . lastline . 's/,\($\)\@!/,\r/ge'

    " Locate block of code to be considered (same indentation, no blanks)
    let firstline  = search('^\%(.\)\@!','bnW') + 1
    let lastline   = search('^\%(.\)\@!', 'nW') - 1
    if lastline < 0
        let lastline = line('$')
    endif
    "key=value] => key=value<cr>]
    exec firstline . "," . lastline . 's/^[^{\[\]}]\+\([\]}]\)\@=/&\r/ge'

    " Locate block of code to be considered (same indentation, no blanks)
    let firstline  = search('^\%(.\)\@!','bnW') + 1
    let lastline   = search('^\%(.\)\@!', 'nW') - 1
    if lastline < 0
        let lastline = line('$')
    endif
    "^[... => [<cr>]
    exec firstline . "," . lastline . 's/^[{\[]\($\)\@!/&\r/ge'

    " Locate block of code to be considered (same indentation, no blanks)
    let firstline  = search('^\%(.\)\@!','bnW') + 1
    let lastline   = search('^\%(.\)\@!', 'nW') - 1
    if lastline < 0
        let lastline = line('$')
    endif
    "...[... => ...[<cr>
    exec firstline . "," . lastline . 'g/[^\]}]/s/[^\[{][\[{]\($\)\@!/&\r/ge'

    " Locate block of code to be considered (same indentation, no blanks)
    let firstline  = search('^\%(.\)\@!','bnW') + 1
    let lastline   = search('^\%(.\)\@!', 'nW') - 1
    if lastline < 0
        let lastline = line('$')
    endif
    "[[... => [<cr>[
    exec firstline . "," . lastline . 's/[\[{][^\[{]*\([\[{]\)\@=/&\r/ge'

    " Locate block of code to be considered (same indentation, no blanks)
    let firstline  = search('^\%(.\)\@!','bnW') + 1
    let lastline   = search('^\%(.\)\@!', 'nW') - 1
    if lastline < 0
        let lastline = line('$')
    endif
    "]] => ]<cr>]
    exec firstline . "," . lastline . 's/[\]}][^\]}]*\([\]}]\)\@=/&\r/ge'
endfunction
